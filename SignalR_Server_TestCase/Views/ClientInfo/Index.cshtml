@using SignalR_Server_TestCase.Models
@model IEnumerable<ClientModel>
<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Ip Address</th>
                <th scope="col">Memory Usage</th>
                <th scope="col">CPU Usage</th>
                <th scope="col">Disk Literal</th>
                <th scope="col">Disk Space Available</th>
            </tr>
        </thead>
        @{
            foreach (var client in Model)
            {
                <tr>
                    <td rowspan="@client.Disks.Count()">@client.IpAddress</td>
                    <td rowspan="@client.Disks.Count()">@string.Format("{0}/{1}", client.MemoryUsage, client.MemoryTotal)</td>
                    <td rowspan="@client.Disks.Count()">@client.CPUUsagePercentage.ToString("P")</td>
                    <td>@client.MainDisk.Literal</td>
                    <td>@string.Format("{0}/{1}", client.MainDisk.DiskSpaceAvailable, client.MainDisk.DiskSpaceTotal)</td>
                </tr>

                if (client.Disks.Count() < 2)
                    continue;

                bool isFirst = true;
                foreach (var disk in client.Disks)
                {
                    if (isFirst)
                    {
                        isFirst = false;
                        continue;
                    }
                    <tr>
                        <td>@disk.Literal</td>
                        <td>@string.Format("{0}/{1}", disk.DiskSpaceAvailable, disk.DiskSpaceTotal)</td>
                    </tr>
                }
            }
        }
    </table>

</body>
</html>
